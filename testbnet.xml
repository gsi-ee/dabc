<?xml version="1.0"?>
<dabc version="1">
  <Context host="localhost" name="Cluster">
    <Run>
      <runfunc value="RunTestBnet"/>
    </Run>
    <Application class="bnet::Cluster">
       <NetDevice value="dabc::SocketDevice"/>
    </Application>
  </Context>
  <Context host="lxi009" name="Cont1"/>
  <Context host="lxi010" name="Cont2"/>
  <Context host="lxi011" name="Cont3"/>
  <Context host="lxi012" name="Cont4"/>
  <Defaults>
    <Context name="*">
      <Run>
        <logfile value="test${DABCNODEID}.log"/>
        <loglevel value="1"/>
        <lib value="libDabcBnet.so"/>
      </Run>
    </Context>
    <Context name="Cont*">
       <Run>
          <lib value="libBnetTest.so"/>
       </Run>
      <Application class="bnet::TestWorker">
         <IsGenerator value="true"/>
         <IsSender value="true"/>
         <IsReceiver value="true"/>
         <NumReadouts value="4"/>
         <CombinerModus value="0"/>
      </Application>       
    </Context>
  </Defaults>
</dabc>
