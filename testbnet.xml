<?xml version="1.0"?>
<dabc version="1">
  <Context host="lxg0526" name="Cluster">
    <Application class="bnet::Cluster">
       <NetDevice value="dabc::SocketDevice"/>
    </Application>
  </Context>
  <Context host="lxi009" name="Cont1"/>
  <Context host="lxi010" name="Cont2"/>
  <Context host="lxi011" name="Cont3"/>
  <Context host="lxi012" name="Cont4"/>
  <Defaults>
    <Context name="*">
      <Run>
        <user value="linev"/>
        <port value="22"/>
        <logfile value="test${DABCNODEID}.log"/>
        <loglevel value="1"/>
        <lib value="${DABCSYS}/lib/libDabcBnet.so"/>
