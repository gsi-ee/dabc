<?xml version="1.0"?>
<dabc version="2">
  <Context name="Converter">
        
    <Run>
      <lib value="libDabcMbs.so"/>
      <lib value="libDabcHadaq.so"/>
      <loglimit value="1000000"/>
      <logfile value="Converter.log"/>
    </Run>
    
    <MemoryPool name="Pool">
       <BufferSize value="65536"/>
       <NumBuffers value="1000"/>         
    </MemoryPool>
    
    <Module name="Conv" class="hadaq::MbsTransmitterModule">
       <NumInputs value="1"/>
       <NumOutputs value="1"/>
    
       <SubeventFullId value="0x000001F"/>
       
       <InputPort name="Input0" url="hld://dabc_000*.hld" queue="50"/>

       <OutputPort name="Output0" url="lmd://dabc.lmd?maxsize=30&log=2"/>
    
       <TransmitData width="5" prec="3" low="0" up="50" debug="1"/>
       <TransmitEvents width="4" prec="1" low="0" up="100" debug="1"/>
     </Module>
     
  </Context>
</dabc>
