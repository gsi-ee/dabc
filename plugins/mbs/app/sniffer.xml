<?xml version="1.0"?>
<dabc version="2">
  <Context name="Sniffer">
    <Run>
      <lib value="libDabcMbs.so"/>
      <lib value="libDabcHttp.so"/>
      <logfile value="Sniffer.log"/>
      <loglimit value="1000000"/>
      <master value=""/>
    </Run>

    <!-- only enabled when library is loaded -->
    <HttpServer name="http">
       <enabled value="true"/>
       <port value="8095"/>
       <topname value="${Context}"/>
       <select value="App/mbs"/>
       <clients value="false"/>
    </HttpServer>

    <Module name="mbs" class="mbs::Player">
       <node value="X86G-45"/>
       <period value="1"/>
       <history value="200"/>
    </Module>
  </Context>
</dabc>
