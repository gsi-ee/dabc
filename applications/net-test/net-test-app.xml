<?xml version="1.0"?>
<dabc version="1">
  <Context host="lxi026" port="5432" name="node0"/>
  <Context host="lxi042" port="5433" name="node1"/>
  <Context host="lxi045" port="5434" name="node2"/>
  <Context host="lxi038" port="5435" name="node3"/>
  <Defaults>
     <Context name="*">
       <Run>
         <lib value="libDabcNetTest.so"/>
         <sockethost value="${host}"/>
         <logfile value="Node${DABCNODEID}.log"/>
         <debuglevel value="1"/>
	      <debugger value="false"/>
         <loglevel value="1"/>
         <loglimit value="1000000"/>
         <runtime value="10"/>
       </Run>
       <Application class="NetTestApp">
         <Kind value="all-to-all"/>
         <NetDevice value="dabc::SocketDevice"/>
         <McastAddr value="224.0.0.15"/>
         <McastPort value="1234"/>
         <BufferSize value="8192"/>
         <OutputQueueSize value="4"/>
         <InputQueueSize value="8"/>
         <UseAcknowledge value="false"/>
         <MemoryPool name="*">
            <NumBuffers value="200"/>
            <!-- value of BufferSize can be reused from application -->
         </MemoryPool>
         <MemoryPool name="RecvPool">
            <NumBuffers value="100"/>
            <!-- value of BufferSize can be reused from application -->
         </MemoryPool>
       </Application>
     </Context>
  </Defaults>
</dabc>
