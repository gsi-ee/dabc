   <Context host="*">
     <Run>
       <lib value="libDabcIbTest.so"/>
       <LD_LIBRARY_PATH value="/home/compeng/linev/dabc/applications/ib-test"/>
       <logfile value="/tmp/Node${DABCNODEID}.log"/>
       <debuglevel value="1"/>
       <debugger value="false"/>
       <loglevel value="1"/>
       <loglimit value="1000000"/>
       <runtime value="100"/>
     </Run>
     <Application class="IbTestApp">
