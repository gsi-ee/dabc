<?xml version="1.0"?>
<dabc version="1">
  <Variables>
     <genhost1 value="lxi009"/>
     <genhost2 value="lxi010"/>
     <genhost3 value="lxi011"/>
     <genport value="6027"/>
  </Variables>
  <Context host="${genhost1}" name="Generator1"/>
  <Context host="${genhost2}" name="Generator2"/>
  <Context host="${genhost3}" name="Generator3"/>
  <Context host="lxi012" name="Combiner">
    <Run>
      <lib value="libDabcMbs.so"/>
      <func value="StartMbsCombiner"/>
    </Run>
    <Module name="Combiner">
       <NumInputs value="3"/>
       <DoFile value="false"/>
       <DoServer value="false"/>
       <BufferSize value="16384"/>
       <Port name="Input0">
          <InputQueueSize value="5"/>
          <MbsServerKind value="Transport"/>
          <MbsServerName value="${genhost1}"/>
          <MbsServerPort value="${genport}"/>
       </Port>
       <Port name="Input1">
          <InputQueueSize value="5"/>
          <MbsServerKind value="Transport"/>
          <MbsServerName value="${genhost2}"/>
          <MbsServerPort value="${genport}"/>
       </Port>
       <Port name="Input2">
          <InputQueueSize value="5"/>
          <MbsServerKind value="Transport"/>
          <MbsServerName value="${genhost3}"/>
          <MbsServerPort value="${genport}"/>
       </Port>
     </Module>
  </Context>
  <Defaults>
    <Context name="Generator*">
      <Run>
        <lib value="libDabcMbs.so"/>
        <func value="StartMbsGenerator"/>
      </Run>
      <Module name="Generator">
         <Port name="Output">
            <OutputQueueSize value="5"/>
            <MbsServerPort value="${genport}"/>
          </Port>
       </Module>
    </Context>
  </Defaults>
</dabc>
